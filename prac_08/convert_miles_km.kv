BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '7'
            font_size: 48
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
        # the following line specifies the function in the app class to call when the button is pressed
                on_press: app.handle_increment(input_number.text,1)
            Button:
                text: 'Down'
        # the following line specifies the function in the app class to call when the button is pressed
                on_press: app.handle_increment(input_number.text,-1)


    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Convert miles to km'
        # the following line specifies the function in the app class to call when the button is pressed
            on_press: app.handle_calculate(input_number.text)

    BoxLayout:
        orientation: 'horizontal'
        Label:
            id: output_label
            font_size: 48
            color: (1, 0.9, 0.3, 0.8)
